
public class Nikolaushaus {
	Interaktionsbrett brett = new Interaktionsbrett();
	Nikolaushaus(){

	}

	void zeichnen(int xPos, int yPos, int scale) {
		brett.neuesRechteck(xPos * scale, yPos *scale, 10 * scale, 10 * scale);
		brett.neueLinie(xPos* scale, yPos* scale, xPos*scale +10*scale,  yPos*scale +10*scale);
		brett.neueLinie(xPos* scale, yPos* scale+10*scale, xPos*scale+10*scale,  yPos*scale);
		brett.neueLinie(xPos* scale, yPos* scale, xPos*scale+5*scale,  yPos*scale-10*scale);
		brett.neueLinie(xPos*scale+5*scale,  yPos*scale-10*scale,xPos* scale+10*scale, yPos* scale );


	}

}

